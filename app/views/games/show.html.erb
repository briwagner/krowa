<div class = "temporary-margin">
  <img src=<%= @game.image_url %> height="500" width="500">
  <br>
  <br>
  <%= "Name: #{@game.name}" %>
  <br>
  <%= "Rating: 5 Stars" %> <!-- PLACEHOLDER -->
  <br>
  <%= "Min Players: #{@game.min_players}" %>
  <br>
  <%= "Max Players: #{@game.max_players}" %>
  <br>
  <%= "Playing Time: #{@game.playing_time}" %>
  <br>
  <%= "Description: #{@game.description}" %>
</div>


<%= link_to 'Leave a review', new_game_review_path(@game), :remote => true, :id => "new_review_link" %>


  <div id="reviews">
  <% if @game.reviews.length > 0 %>
    <% @game.reviews.each do |review| %>
      <%= render "reviews/review", :review => review %>
    <% end %>
  <% end %>
</div>
