<div class="game-detail">
  <img src=<%= @game.image_url %> height="500" width="500" class="game-pic">
  <h3><%= "#{@game.name}" %></h3>
  <p><strong>Rating: </strong><%= "5 Stars" %></p> <!-- PLACEHOLDER -->
  <p><strong>Min Players: </strong><%= @game.min_players %></p>
  <p><strong>Max Players: </strong><%= @game.max_players %></p>
  <p><strong>Playing Time: </strong><%= @game.playing_time %> minutes</p>
  <p><strong>Description:</strong> <%= @game.description %></p>

  <% unless current_user.games.include?(@game) %>
    <div class="pad-15">
      <%= form_tag(game_collections_path(@game)) do %>
        <%= submit_tag "Add to collection", class: "btn btn-info" %>
      <% end %>
    </div>
  <% else %>
    <p class="pad-10 text-bkg-antique"><em>This game is in your collection.</em></p>
  <% end %>

</div>

<section class="reviews-section">
<div class="pad-15">
  <%= link_to 'Leave a review', new_game_review_path(@game), :remote => true, :id => "new_review_link", :class => "btn-review" %>
</div>
<div id="reviews">
  <% if @game.reviews.length > 0 %>
    <% @reviews.each do |review| %>
      <%= render "reviews/review", :review => review %>
    <% end %>
  <% end %>
</div>
</section>

